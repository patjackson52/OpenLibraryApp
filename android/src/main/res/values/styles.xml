<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">-->
    <style name="LibraryAppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="android:buttonStyle">@style/ChoiceButton</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
<!--        <item name="colorControlActivated">@color/white</item>-->

        <item name="android:textColorHint">@color/il__gray90</item>
        <item name="android:editTextColor">#295055</item>
        <item name="android:textColorPrimary">#295055</item>
        <item name="android:textColorSecondary">#295055</item>
        <item name="android:textColorTertiary">#295055</item>
        <item name="android:textColorPrimaryInverse">#295055</item>
        <item name="android:textColorSecondaryInverse">#295055</item>
        <item name="android:textColorTertiaryInverse">#295055</item>
        <item name="toolbarNavigationButtonStyle">@style/Toolbar.Button.Navigation.Tinted</item>
    </style>


    <style name="Toolbar" >
        <item name="android:titleTextColor">@color/white</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:buttonTint">@color/white</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="Toolbar.Button.Navigation.Tinted" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="ListTitle">
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textSize">@dimen/txt_title_size</item>
        <item name="android:layout_marginStart">@dimen/txt_list_title_margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/txt_list_title_margin_horizontal</item>
        <item name="android:layout_marginTop">@dimen/txt_list_title_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/txt_list_title_margin_bottom</item>
    </style>

    <style name="SubTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/txt_subtitle_size</item>
    </style>


    <style name="Text2">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/txt_subtitle_size</item>
    </style>

    <style name="TimerText">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/txt_timer_size</item>
    </style>

    <style name="ChoiceButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@drawable/button_color_selector</item>
    </style>

    <style name="SettingsLabelText">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="BookItemTitle" parent="H6">
    </style>

    <style name="BookItemSubtitle" parent="SubTitle">
        <item name="android:textColor">@color/il__gray90</item>
    </style>

    <style name="H1">
        <item name="android:textSize">96sp</item>
        <item name="android:letterSpacing">-0.16</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="H2">
        <item name="android:textSize">60sp</item>
        <item name="android:letterSpacing">-0.007</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="H3">
        <item name="android:textSize">48sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="H4">
        <item name="android:textSize">34sp</item>
        <item name="android:letterSpacing">0.007</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="H4.Dark">
        <item name="android:color">@color/colorPrimary</item>
    </style>

    <style name="H5">
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="H6">
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.0075</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Subtitle1">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.009</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Subtitle2">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.007</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.031</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.018</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Button">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.089</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.033333</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Overline">
        <item name="android:textSize">10sp</item>
        <item name="android:letterSpacing">.15</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>

